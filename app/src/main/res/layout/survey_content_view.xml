<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="jobtrends.job_aymax.SurveyContentViewModel">

	<data>
		<variable name="vm" type="jobtrends.job_aymax.SurveyContentViewModel"/>
	</data>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:orientation="vertical">

		<Space android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_weight="1"/>

		<android.support.v7.widget.CardView android:layout_width="match_parent"
		                                    android:layout_height="wrap_content"
		                                    android:layout_gravity="center"
		                                    android:layout_marginLeft="16dp"
		                                    android:layout_marginRight="16dp"
		                                    android:layout_weight="2"
		                                    app:cardElevation="8dp">

			<LinearLayout android:layout_width="match_parent"
			              android:layout_height="wrap_content"
			              android:layout_gravity="center"
			              android:orientation="vertical">

				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:gravity="center"
				          android:text="@{vm.title}"
				          android:textAppearance="?android:attr/textAppearanceLarge"
				          android:textStyle="bold"/>

				<Button android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"
				        android:layout_margin="16dp"
				        android:padding="16dp"
				        android:background="@drawable/rounded_layout"
				        android:text="OUI"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textColor="@android:color/white"
				        android:textStyle="bold"/>

				<Button android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"
				        android:layout_margin="16dp"
				        android:background="@drawable/outline_layout"
				        android:padding="16dp"
				        android:text="NON"
				        android:textAppearance="?android:attr/textAppearanceSmall"
				        android:textColor="@android:color/black"
				        android:textStyle="bold"/>

			</LinearLayout>

		</android.support.v7.widget.CardView>


		<Space android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_weight="1"/>

		<TextView android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:gravity="center"
		          android:text="Cela nous permet de savoir si votre corps de mÃ©tier recoit des formations"
		          android:textAppearance="?android:attr/textAppearanceSmall"/>


		<Space android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_weight="1"/>

	</LinearLayout>

</layout>
