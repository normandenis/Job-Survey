<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="jobtrends.jobsurvey.activity.SignInActivity">

  <data>
    <variable name="signInActivity"
              type="jobtrends.jobsurvey.activity.SignInActivity"/>
    <variable name="errorModel"
              type="jobtrends.jobsurvey.model.ErrorModel"/>
    <variable name="userModel"
              type="jobtrends.jobsurvey.model.UserModel"/>
  </data>

  <ScrollView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/banner">

    <android.support.constraint.ConstraintLayout android:id="@+id/my_constraintlayout_0"
                                                 android:layout_gravity="center"
                                                 style="@style/layout">

      <ImageView android:id="@+id/my_imageview_0"
                 android:layout_width="0dp"
                 android:layout_height="0dp"
                 android:src="@drawable/logo_landscape_accent"
                 style="@style/image"
                 app:layout_constraintDimensionRatio="5:1"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintBottom_toTopOf="@id/my_textinputlayout_0"
                 tools:ignore="ContentDescription"/>

      <android.support.design.widget.TextInputEditText android:id="@+id/my_textinputlayout_0"
                                                       android:hint="@string/sign_in_view_txt_1"
                                                       android:drawablePadding="8dp"
                                                       android:inputType="textEmailAddress"
                                                       android:text="@={userModel.email}"
                                                       android:drawableStart="@drawable/email_accent_18"
                                                       app:layout_constraintRight_toRightOf="parent"
                                                       app:layout_constraintLeft_toLeftOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@id/my_imageview_0"
                                                       app:layout_constraintBottom_toTopOf="@id/my_textinputlayout_1"
                                                       style="@style/editTextAccent"/>

      <android.support.design.widget.TextInputEditText android:id="@+id/my_textinputlayout_1"
                                                       android:hint="@string/sign_in_view_txt_2"
                                                       android:inputType="textPassword"
                                                       android:drawableStart="@drawable/lock_accent_18"
                                                       android:drawablePadding="8dp"
                                                       android:text="@={userModel.password}"
                                                       app:layout_constraintRight_toRightOf="parent"
                                                       app:layout_constraintLeft_toLeftOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@id/my_textinputlayout_0"
                                                       app:layout_constraintBottom_toTopOf="@id/my_textview_1"
                                                       style="@style/editTextAccent"/>

      <TextView android:id="@+id/my_textview_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_textinputlayout_1"
                app:layout_constraintBottom_toTopOf="@id/my_appcompatbutton_0"
                android:text="@={errorModel.mainMsg}"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_red_light"/>

      <android.support.v7.widget.AppCompatButton android:id="@+id/my_appcompatbutton_0"
                                                 android:onClick="@{() -> signInActivity.onClickSignIn()}"
                                                 app:layout_constraintRight_toRightOf="parent"
                                                 app:layout_constraintLeft_toLeftOf="parent"
                                                 app:layout_constraintTop_toBottomOf="@id/my_textview_1"
                                                 app:layout_constraintBottom_toTopOf="@id/my_textview_2"
                                                 android:text="@string/sign_in_view_txt_3"
                                                 style="@style/button"/>

      <TextView android:id="@+id/my_textview_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintTop_toBottomOf="@id/my_appcompatbutton_0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="@{() -> signInActivity.onClickSignUp()}"
                android:text="@string/sign_in_view_txt_4"
                style="@style/textAccent"/>

    </android.support.constraint.ConstraintLayout>

  </ScrollView>

</layout>
