<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="jobtrends.jobsurvey.activity.SignInActivity">

  <data>
    <variable name="signInActivity"
              type="jobtrends.jobsurvey.activity.SignInActivity"/>
    <variable name="errorModel"
              type="jobtrends.jobsurvey.model.ErrorModel"/>
    <variable name="userModel"
              type="jobtrends.jobsurvey.model.UserModel"/>
  </data>

  <ScrollView android:layout_width="match_parent"
              android:background="@drawable/banner"
              android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout android:id="@+id/my_constraintlayout_0"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:orientation="vertical"
                                                 android:padding="@dimen/divider">

      <ImageView android:id="@+id/my_imageview_0"
                 android:layout_width="0dp"
                 android:layout_height="256dp"
                 android:layout_marginRight="32dp"
                 android:src="@drawable/ic_logo_landscape"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintBottom_toTopOf="@id/my_textinputlayout_0"
                 tools:ignore="ContentDescription"/>

      <android.support.design.widget.TextInputLayout android:id="@+id/my_textinputlayout_0"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     app:layout_constraintTop_toBottomOf="@id/my_imageview_0">

        <EditText android:id="@+id/my_edittext_0"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/sign_in_view_txt_1"
                  android:drawablePadding="8dp"
                  android:shadowColor="@color/accent"
                  android:textColorLink="@color/accent"
                  android:textColor="@color/accent"
                  android:textColorHighlight="@color/accent"
                  android:textColorHint="@color/accent"
                  android:backgroundTint="@color/accent"
                  android:inputType="textEmailAddress"
                  android:text="@={userModel.email}"
                  android:drawableStart="@drawable/ic_email_accent_16dp"/>

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout android:id="@+id/my_textinputlayout_1"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     app:layout_constraintTop_toBottomOf="@id/my_textinputlayout_0"
                                                     android:layout_marginTop="@dimen/divider">
        <EditText android:id="@+id/my_edittext_1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/sign_in_view_txt_2"
                  android:inputType="textPassword"
                  android:shadowColor="@color/accent"
                  android:textColorLink="@color/accent"
                  android:textColor="@color/accent"
                  android:textColorHighlight="@color/accent"
                  android:textColorHint="@color/accent"
                  android:backgroundTint="@color/accent"
                  android:drawableStart="@drawable/ic_lock_accent_16dp"
                  android:drawablePadding="8dp"
                  android:text="@={userModel.password}"/>

      </android.support.design.widget.TextInputLayout>

      <TextView android:id="@+id/my_textview_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/my_textinputlayout_1"
                android:text="@={errorModel.mainMsg}"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_red_light"/>

      <android.support.v7.widget.AppCompatButton android:id="@+id/my_appcompatbutton_0"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginTop="@dimen/divider"
                                                 android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                                 android:background="@drawable/rounded_layout"
                                                 android:onClick="@{() -> signInActivity.onClickSignIn()}"
                                                 app:layout_constraintTop_toBottomOf="@id/my_textview_1"
                                                 android:text="@string/sign_in_view_txt_3"
                                                 android:textColor="@color/accent"/>


      <TextView android:id="@+id/my_textview_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/divider"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintTop_toBottomOf="@id/my_appcompatbutton_0"
                android:onClick="@{() -> signInActivity.onClickSignUp()}"
                android:text="@string/sign_in_view_txt_4"
                android:textColor="@color/accent"/>

    </android.support.constraint.ConstraintLayout>

  </ScrollView>

</layout>
