<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/id_start_view"
        tools:context="jobtrends.job_aymax.viewmodel.StartSurveyViewModel">

	<data>
		<variable name="vm"
		          type="jobtrends.job_aymax.viewmodel.StartSurveyViewModel"/>
	</data>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:orientation="vertical">

		<Space android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_weight="1"/>

		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:layout_weight="2"
		              android:orientation="vertical">

			<android.support.v7.widget.GridLayout android:layout_width="match_parent"
			                                      android:layout_height="wrap_content"
			                                      app:columnOrderPreserved="false"
			                                      app:rowOrderPreserved="false">

				<ProgressBar android:id="@+id/myProgressBar"
				             style="?android:attr/progressBarStyleHorizontal"
				             android:layout_width="128dp"
				             android:layout_height="128dp"
				             android:background="@drawable/circle_shape"
				             android:indeterminate="false"
				             android:max="100"
				             android:progress="75"
				             android:progressDrawable="@drawable/circular_progress_bar"
				             app:layout_column="0"
				             app:layout_gravity="center"
				             app:layout_row="0"/>

				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:gravity="center"
				          android:text="75%"
				          android:textAppearance="?android:attr/textAppearanceSmall"
				          android:textColor="@color/colorPrimary"
				          android:textStyle="bold"
				          app:layout_column="0"
				          app:layout_gravity="center"
				          app:layout_row="0"/>

			</android.support.v7.widget.GridLayout>

			<ListView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:layout_margin="16dp"
			          app:adapter="@{vm.themeViewModel}"/>

		</LinearLayout>

		<Space android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_weight="1"/>

	</LinearLayout>

</layout>
