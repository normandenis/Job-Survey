<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="jobtrends.job_aymax.viewmodel.StartSurveyViewModel">

	<data>
		<variable name="vm"
		          type="jobtrends.job_aymax.viewmodel.StartSurveyViewModel"/>
	</data>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:orientation="vertical">

		<Space android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_weight="1"/>

		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_gravity="center"
		          android:layout_margin="16dp"
		          android:text="@string/start_survey_view_0"
		          android:textAppearance="?android:attr/textAppearanceLarge"/>

		<Button android:id="@+id/button_start_survey_0"
				android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_margin="16dp"
		        android:background="@drawable/rounded_layout"
		        android:padding="16dp"
		        android:onClick="@{() -> vm.onClick()}"
		        android:text="@string/start_survey_view_1"
		        android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@color/colorAccent"/>

		<Space android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_weight="1"/>

	</LinearLayout>

</layout>
