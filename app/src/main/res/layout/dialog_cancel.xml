<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="jobtrends.jobsurvey.fragment.SurveyFragment">

  <data>
    <variable name="surveyFragment"
              type="jobtrends.jobsurvey.fragment.SurveyFragment"/>
  </data>

  <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                               android:layout_height="match_parent">

    <TextView android:id="@+id/my_textview_0"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:padding="?dialogPreferredPadding"
              android:text="@string/cancel_popup_view_txt_0"
              android:textAppearance="@style/TextAppearance.AppCompat.Title"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toTopOf="@id/my_layout_0"
              style="@style/textPrimary"/>

    <android.support.constraint.ConstraintLayout android:id="@+id/my_layout_0"
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:padding="?dialogPreferredPadding"
                                                 app:layout_constraintTop_toBottomOf="@id/my_textview_0"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 app:layout_constraintRight_toRightOf="parent"
                                                 app:layout_constraintLeft_toLeftOf="parent">

      <Button android:id="@+id/my_button_0"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/outline_layout"
              android:onClick="@{() -> surveyFragment.onCloseNo()}"
              android:text="@string/cancel_popup_view_txt_1"
              android:textAppearance="@style/TextAppearance.AppCompat.Button"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@id/my_button_1"
              style="@style/textPrimary"/>

      <Button android:id="@+id/my_button_1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/rounded_layout"
              android:onClick="@{() -> surveyFragment.onCloseYes()}"
              android:text="@string/cancel_popup_view_txt_2"
              android:textAppearance="@style/TextAppearance.AppCompat.Button"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toRightOf="@id/my_button_0"
              style="@style/textAccent"/>

    </android.support.constraint.ConstraintLayout>

  </android.support.constraint.ConstraintLayout>

</layout>
