<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/id_start_view"
        tools:context="jobtrends.jobsurvey.viewmodel.ThemeViewModel">

  <data>
    <variable name="vm"
              type="jobtrends.jobsurvey.viewmodel.ThemeViewModel"/>
    <variable name="themeAdapter"
              type="jobtrends.jobsurvey.adapter.ThemeAdapter"/>
    <variable name="homeModel"
              type="jobtrends.jobsurvey.model.HomeModel"/>
  </data>

  <ScrollView android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/margin_bottom"
                  android:paddingEnd="@dimen/margin_right"
                  android:paddingStart="@dimen/margin_left"
                  android:paddingTop="@dimen/margin_top"
                  android:weightSum="2">

      <android.support.v7.widget.GridLayout android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            app:columnOrderPreserved="false"
                                            app:rowOrderPreserved="false">

        <ProgressBar android:id="@+id/myProgressBar"
                     style="?android:attr/progressBarStyleHorizontal"
                     android:layout_width="128dp"
                     android:layout_height="128dp"
                     android:background="@drawable/circle_shape"
                     android:indeterminate="false"
                     android:max="100"
                     android:progress="@{homeModel.score}"
                     android:progressDrawable="@drawable/circular_progress_bar"
                     app:layout_column="0"
                     app:layout_gravity="center"
                     app:layout_row="0"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="@{homeModel.score.toString() + @string/start_survey_view_txt_1}"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textColor="@color/colorPrimary"
                  android:textStyle="bold"
                  app:layout_column="0"
                  app:layout_gravity="center"
                  app:layout_row="0"/>
      </android.support.v7.widget.GridLayout>

      <ListView android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                app:adapter="@{themeAdapter}"/>

      <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:text="@string/start_survey_view_txt_2"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

  </ScrollView>

</layout>
