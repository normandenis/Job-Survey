<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="jobtrends.jobsurvey.activity.HomeActivity">

  <data>
    <variable name="homeActivity"
              type="jobtrends.jobsurvey.activity.HomeActivity"/>
  </data>

  <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/banner"
                android:orientation="vertical">

    <android.support.design.widget.AppBarLayout android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@color/primary_dark"
                                                android:theme="@style/theme">

      <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                                         android:layout_width="match_parent"
                                         android:layout_height="?attr/actionBarSize"
                                         android:contentInsetEnd="0dp"
                                         android:contentInsetLeft="0dp"
                                         android:contentInsetRight="0dp"
                                         android:contentInsetStart="0dp"
                                         android:elevation="2dp"
                                         app:contentInsetEnd="0dp"
                                         app:contentInsetLeft="0dp"
                                         app:contentInsetRight="0dp"
                                         app:contentInsetStart="0dp"
                                         app:popupTheme="@style/theme">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent">

          <Button android:id="@+id/btn"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_margin="8dp"
                  android:layout_marginStart="@dimen/margin"
                  app:layout_constraintDimensionRatio="1:1"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"/>

          <TextView android:id="@+id/my_textview_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Survey"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textColor="@color/accent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

      </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout android:id="@+id/fragment_app_bar_nav_drawer_0"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"/>

  </LinearLayout>

</layout>

