<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jobtrends.jobsurvey">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
                 android:icon="@drawable/ic_logo_gray"
                 android:label="@string/app_name"
                 android:roundIcon="@drawable/ic_logo_gray"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">

      <meta-data android:name="com.google.firebase.messaging.default_notification_icon"
                 android:resource="@drawable/ic_logo_gray_500dp"/>

      <meta-data android:name="com.google.firebase.messaging.default_notification_color"
                 android:resource="@color/colorAccent"/>

        <meta-data android:name="com.google.firebase.messaging.default_notification_channel_id"
                   android:value="@string/default_notification_channel_id"/>

        <activity android:name="jobtrends.jobsurvey.viewmodel.SignInViewModel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="jobtrends.jobsurvey.viewmodel.SignUpViewModel">
        </activity>

        <activity android:name="jobtrends.jobsurvey.viewmodel.HomeViewModel">
        </activity>

        <service android:name="jobtrends.jobsurvey.service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service android:name="jobtrends.jobsurvey.service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>